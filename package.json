{
  "name": "swell-node-video-downloader",
  "version": "1.0.0",
  "description": "Node.js 视频下载应用，支持 HLS、DASH 等多种流媒体格式",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "web:dev": "pnpm --filter video-downloader-web dev",
    "install-browser": "npx puppeteer browsers install chrome",
    "install-browser:cn": "npx puppeteer browsers install chrome --base-url=https://registry.npmmirror.com/-/binary/chrome-for-testing"
  },
  "keywords": [
    "video",
    "download",
    "hls",
    "dash",
    "streaming"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^21.6.1",
    "axios": "^1.6.2",
    "m3u8-parser": "^4.8.0",
    "mpd-parser": "^1.0.1",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
